<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\Cake.Issues.FrostingRecipe.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <Title>Cake.Issues.FrostingRecipe</Title>
    <Description>Cake.Issues.FrostingRecipe provides a build script which can be used inside your projects Cake build script to add issue management.

See the Project Site for documentation and an overview of the whole ecosystem of addins for working with issues in Cake scripts.</Description>
    <Authors>Pascal Berger</Authors>
    <Copyright>Copyright Â© Pascal Berger</Copyright>
    <PackageTags>Build Cake Cake.Issues Recipe</PackageTags>
    <PackageIcon>icon.png</PackageIcon>
    <PackageProjectUrl>https://cakeissues.net</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/cake-contrib/Cake.Issues.Recipe.git</RepositoryUrl>
    <PackageReleaseNotes>https://github.com/cake-contrib/Cake.Issues.Recipe/releases/tag/0.4.4</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="BuildServers\AzurePipelineSummary.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <None Include="icon.png" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Cake.AzureDevOps" Version="0.5.1" />
    <PackageReference Include="Cake.Frosting" Version="1.1.0" PrivateAssets="All" />
    <PackageReference Include="Cake.Git" Version="1.0.0" />
    <PackageReference Include="Cake.Issues" Version="0.9.1" />
    <PackageReference Include="Cake.Issues.DupFinder" Version="0.9.0" />
    <PackageReference Include="Cake.Issues.EsLint" Version="0.9.0" />
    <PackageReference Include="Cake.Issues.InspectCode" Version="0.9.0" />
    <PackageReference Include="Cake.Issues.Markdownlint" Version="0.9.0" />
    <PackageReference Include="Cake.Issues.MsBuild" Version="0.9.1" />
    <PackageReference Include="Cake.Issues.PullRequests" Version="0.9.1" />
    <PackageReference Include="Cake.Issues.PullRequests.AppVeyor" Version="0.9.0" />
    <PackageReference Include="Cake.Issues.PullRequests.AzureDevOps" Version="0.9.1" />
    <PackageReference Include="Cake.Issues.PullRequests.GitHubActions" Version="0.9.0" />
    <PackageReference Include="Cake.Issues.Reporting" Version="0.9.0" />
    <PackageReference Include="Cake.Issues.Reporting.Generic" Version="0.9.0" />
  </ItemGroup>

</Project>
